---
import { Formatter } from "@utils/formatter";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<div class="lg:flex items-center">
  <Image
    class="object-cover rounded-lg lg:w-64 h-[140px] w-[400px]"
    src={post.data.image}
    alt={post.data.title}
    width={500}
    height={200}
    quality="low"
    loading="lazy"
    transition:name={`${post.slug}-image`}
  />

  <div class="flex flex-col justify-between py-1 lg:mx-5 h-full">
    <a
      href={`/posts/${post.slug}`}
      class="text-xl font-semibold text-gray-800 hover:underline dark:text-white"
    >
      {post.data.description}
    </a>

    <span class="text-sm text-gray-500 dark:text-gray-300 self-end">
      {Formatter.formatDate(post.data.date)}
    </span>
  </div>
</div>
